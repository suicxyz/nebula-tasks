{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node16",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", ".src/@types"]
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src/**/*.ts"],
}
